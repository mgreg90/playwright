#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

bundle install

# Do any other automated setup that you need to do here
# 
# add playwright files to path
ruby -e "require \"#{\"`pwd`\"}/lib/playwright/commands/installer.rb\";Playwright::Commands::Installer.run"

export PATH=$PATH:$HOME/.playwright/bin